---
import { siteConfig } from "@/lib/config";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Textarea } from "@/components/ui/textarea";
import { Label } from "@/components/ui/label";
import { Mail, MapPin, Phone } from "lucide-react";
---

<section id="contact" class="py-20 px-4 gradient-bg">
  <div class="container mx-auto">
    <div class="fade-in">
      <h2 class="text-3xl font-bold mb-4 text-center">Get in Touch</h2>
    </div>
    <div class="fade-in stagger-1">
      <p class="text-muted-foreground text-center mb-12 max-w-2xl mx-auto">
        Interested in working together? Let's connect and discuss how I can help.
      </p>
    </div>
    
    <div class="max-w-4xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-8">
      <div class="fade-in-left stagger-2">
        <div>
          <div class="rounded-lg border border-border bg-card text-card-foreground shadow-sm h-full gradient-border">
            <div class="flex flex-col space-y-1.5 p-6">
              <h3 class="text-2xl font-semibold leading-none tracking-tight">Contact Information</h3>
              <p class="text-sm text-muted-foreground">Reach out via email or connect on LinkedIn</p>
            </div>
            <div class="p-6 pt-0 space-y-4">
              <a 
                href={`mailto:${siteConfig.contact.email}`}
                class="flex items-center gap-3 text-muted-foreground hover:text-accent transition-colors group"
              >
                <div class="w-10 h-10 rounded-lg bg-accent/10 flex items-center justify-center group-hover:bg-accent/20 transition-colors">
                  <Mail className="h-5 w-5 text-accent" />
                </div>
                <span>{siteConfig.contact.email}</span>
              </a>
              
              <div class="flex items-center gap-3 text-muted-foreground">
                <div class="w-10 h-10 rounded-lg bg-highlight/10 flex items-center justify-center">
                  <Phone className="h-5 w-5 text-highlight" />
                </div>
                <div class="text-sm">
                  <div>IND: {siteConfig.contact.phone.india}</div>
                  <div>UAE: {siteConfig.contact.phone.uae}</div>
                </div>
              </div>
              
              <div class="flex items-center gap-3 text-muted-foreground">
                <div class="w-10 h-10 rounded-lg bg-success/10 flex items-center justify-center">
                  <MapPin className="h-5 w-5 text-success" />
                </div>
                <span>{siteConfig.contact.location}</span>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <div class="fade-in-right stagger-3">
        <div>
          <div class="rounded-lg border border-border bg-card text-card-foreground shadow-sm h-full gradient-border">
            <div class="flex flex-col space-y-1.5 p-6">
              <h3 class="text-2xl font-semibold leading-none tracking-tight">Send a Message</h3>
              <p class="text-sm text-muted-foreground">I'll get back to you ASAP!</p>
            </div>
            <div class="p-6 pt-0">
              <form 
                id="contact-form"
                class="space-y-4"
                enctype="multipart/form-data"
              >
                <div class="space-y-2">
                  <Label htmlFor="name">Name <span class="text-destructive">*</span></Label>
                  <Input id="name" name="name" placeholder="Your name" required className="focus:ring-accent/50 focus:border-accent" />
                </div>
                
                <div class="space-y-2">
                  <Label htmlFor="email">Email <span class="text-destructive">*</span></Label>
                  <Input id="email" name="email" type="email" placeholder="your@email.com" required className="focus:ring-accent/50 focus:border-accent" />
                </div>

                <div class="space-y-2">
                  <Label htmlFor="phone">Phone</Label>
                  <div class="flex gap-2">
                    <select id="phoneCode" name="phoneCode" class="flex h-10 w-[120px] rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background md:text-sm focus:ring-accent/50 focus:border-accent outline-none">
                      <option value="+1">+1 (US)</option>
                      <option value="+44">+44 (UK)</option>
                      <option value="+91">+91 (IN)</option>
                      <option value="+971">+971 (AE)</option>
                      <option value="+61">+61 (AU)</option>
                      <!-- Add more as necessary -->
                    </select>
                    <Input id="phone" name="phone" type="tel" placeholder="Phone number" className="focus:ring-accent/50 focus:border-accent" />
                  </div>
                </div>
                
                <div class="space-y-2">
                  <Label htmlFor="message">Message <span class="text-destructive">*</span></Label>
                  <Textarea id="message" name="message" placeholder="How can I help you?" rows={4} required className="focus:ring-accent/50 focus:border-accent resize-none" />
                </div>

                <div class="space-y-2">
                  <Label htmlFor="attachments">Attachments</Label>
                  <Input id="attachments" name="attachments" type="file" multiple className="focus:ring-accent/50 focus:border-accent file:bg-transparent file:text-sm file:font-medium" />
                </div>
                
                <Button id="submit-btn" type="submit" className="w-full cta-button">Send Message</Button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  function showToast(message: string, type: 'success' | 'error' = 'success') {
    const toast = document.createElement('div');
    toast.className = `fixed bottom-4 right-4 z-[9999] px-6 py-3 rounded-md shadow-lg font-medium transition-all duration-300 transform translate-y-10 opacity-0 ${type === 'success' ? 'bg-success text-white' : 'bg-destructive text-white'}`;
    toast.innerText = message;
    document.body.appendChild(toast);
    
    // Animate in
    requestAnimationFrame(() => {
      requestAnimationFrame(() => {
        toast.classList.remove('translate-y-10', 'opacity-0');
      });
    });

    setTimeout(() => {
      // Animate out
      toast.classList.add('translate-y-10', 'opacity-0');
      setTimeout(() => toast.remove(), 300);
    }, 4000);
  }

  const form = document.getElementById('contact-form') as HTMLFormElement;
  const submitBtn = document.getElementById('submit-btn');
  
  if (form && submitBtn) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(form);
      const btnText = submitBtn.textContent;
      submitBtn.textContent = 'Sending...';
      submitBtn.setAttribute('disabled', 'true');
      
      try {
        const res = await fetch('/api/contact', {
          method: 'POST',
          body: formData
        });
        
        if (res.ok) {
          form.reset();
          showToast('Message sent successfully!');
        } else {
          const error = await res.json();
          console.error(error);
          showToast('Failed to send message. ' + (error.error || 'Unknown error'), 'error');
        }
      } catch (err) {
        console.error(err);
        showToast('An error occurred. Please try again later.', 'error');
      } finally {
        submitBtn.textContent = btnText;
        submitBtn.removeAttribute('disabled');
      }
    });
  }
</script>
