---
import { resumes } from "@/data/resumes";
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Download, Presentation, ShoppingCart, ClipboardList, Store, Box } from "lucide-react";

const iconMap: Record<string, any> = {
  Presentation: Presentation,
  ShoppingCart: ShoppingCart,
  ClipboardList: ClipboardList,
  Store: Store,
  Box: Box,
};
---

<section id="resume" class="py-20 px-4">
  <div class="container mx-auto">
    <div class="max-w-4xl mx-auto">
      <div class="fade-in text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">Pick Your Flavor</h2>
        <p class="text-muted-foreground">
          Much like ice cream, I come in different flavors too. Choose the one that fits what you're looking for.
        </p>
      </div>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        {resumes.map((resume, index) => {
          const Icon = iconMap[resume.icon] || Box;
          return (
            <div class={`fade-in stagger-${((index % 3) + 2)}`}>
              <Card className="h-full hover-lift hover-glow group border-2 border-transparent hover:border-accent/30 transition-all">
                <CardHeader class="pb-3">
                  <div class="w-10 h-10 rounded-lg bg-accent/10 flex items-center justify-center mb-3 group-hover:bg-accent/20 transition-colors">
                    <Icon class="h-5 w-5 text-accent" />
                  </div>
                  <CardTitle class="text-base">{resume.title}</CardTitle>
                  <CardDescription class="text-sm">{resume.description}</CardDescription>
                </CardHeader>
                <CardContent class="pt-0">
                  <Button 
                    asChild 
                    variant="outline" 
                    size="sm" 
                    className="w-full group-hover:bg-accent group-hover:text-accent-foreground transition-colors"
                  >
                    <a 
                      href={resume.url} 
                      target="_blank" 
                      rel="noopener noreferrer"
                    >
                      <Download class="mr-2 h-4 w-4" />
                      Download PDF
                    </a>
                  </Button>
                </CardContent>
              </Card>
            </div>
          );
        })}
      </div>
    </div>
  </div>
</section>
