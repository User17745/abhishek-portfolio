---
import { resumes } from "@/data/resumes";
import { Card, CardContent, CardDescription, CardHeader, CardTitle, CardFooter } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";
import { Download, Presentation, ShoppingCart, ClipboardList, Store, Box, ExternalLink, FileText } from "lucide-react";

const iconMap: Record<string, any> = {
  Presentation: Presentation,
  ShoppingCart: ShoppingCart,
  ClipboardList: ClipboardList,
  Store: Store,
  Box: Box,
};
---

<section id="resume" class="py-20 px-4">
  <div class="container mx-auto">
    <div class="max-w-5xl mx-auto">
      <div class="fade-in text-center mb-12">
        <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-accent/10 text-accent text-sm font-medium mb-4">
          <FileText class="h-4 w-4" />
          <span>Resume Downloads</span>
        </div>
        <h2 class="text-3xl font-bold mb-4">Pick Your Flavor</h2>
        <p class="text-muted-foreground max-w-xl mx-auto">
          Much like ice cream, people come in different flavors too. Choose the one that fits what you're looking for.
        </p>
      </div>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
        {resumes.map((resume, index) => {
          const Icon = iconMap[resume.icon] || Box;
          const isPopular = resume.id === "ecom" || resume.id === "tpm";
          
          return (
            <div class={`fade-in stagger-${((index % 3) + 2)}`}>
              <Card className="h-full flex flex-col relative overflow-hidden group hover-lift border-border/50 hover:border-accent/50 transition-all duration-300">
                {/* Subtle gradient overlay on hover */}
                <div class="absolute inset-0 bg-gradient-to-br from-accent/5 via-transparent to-highlight/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none"></div>
                
                <CardHeader class="pb-4 relative">
                  <div class="flex items-start justify-between">
                    <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-accent/20 to-highlight/20 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                      <Icon class="h-6 w-6 text-accent" />
                    </div>
                    {isPopular && (
                      <Badge variant="secondary" className="text-xs bg-accent/10 text-accent border-accent/20">
                        Popular
                      </Badge>
                    )}
                  </div>
                  <CardTitle class="text-lg mt-4">{resume.title}</CardTitle>
                  <CardDescription class="text-sm leading-relaxed">{resume.description}</CardDescription>
                </CardHeader>
                
                <CardContent class="flex-1 relative">
                  <div class="flex flex-wrap gap-1.5">
                    {resume.id === "pre-sales" && (
                      <>
                        <Badge variant="outline" class="text-xs">RFPs</Badge>
                        <Badge variant="outline" class="text-xs">Demos</Badge>
                        <Badge variant="outline" class="text-xs">Architecture</Badge>
                      </>
                    )}
                    {resume.id === "ecom" && (
                      <>
                        <Badge variant="outline" class="text-xs">D2C</Badge>
                        <Badge variant="outline" class="text-xs">B2B</Badge>
                        <Badge variant="outline" class="text-xs">Marketplace</Badge>
                      </>
                    )}
                    {resume.id === "tpm" && (
                      <>
                        <Badge variant="outline" class="text-xs">Agile</Badge>
                        <Badge variant="outline" class="text-xs">PMP</Badge>
                        <Badge variant="outline" class="text-xs">Delivery</Badge>
                      </>
                    )}
                    {resume.id === "shopify-tpm" && (
                      <>
                        <Badge variant="outline" class="text-xs">Plus</Badge>
                        <Badge variant="outline" class="text-xs">Headless</Badge>
                        <Badge variant="outline" class="text-xs">Migration</Badge>
                      </>
                    )}
                    {resume.id === "product" && (
                      <>
                        <Badge variant="outline" class="text-xs">Strategy</Badge>
                        <Badge variant="outline" class="text-xs">Roadmap</Badge>
                        <Badge variant="outline" class="text-xs">SaaS</Badge>
                      </>
                    )}
                  </div>
                </CardContent>
                
                <CardFooter class="pt-4 border-t border-border/50 mt-auto relative">
                  <Button 
                    asChild 
                    className="w-full bg-gradient-to-r from-accent to-accent/80 hover:from-accent/90 hover:to-accent/70 text-accent-foreground shadow-md hover:shadow-lg transition-all duration-300"
                  >
                    <a 
                      href={resume.url} 
                      target="_blank" 
                      rel="noopener noreferrer"
                    >
                      <Download class="mr-2 h-4 w-4" />
                      Download PDF
                      <ExternalLink class="ml-2 h-3 w-3 opacity-70" />
                    </a>
                  </Button>
                </CardFooter>
              </Card>
            </div>
          );
        })}
      </div>
    </div>
  </div>
</section>
