---
import { experiences } from "@/data/experience";
import { Badge } from "@/components/ui/badge";
import { Briefcase, Building2 } from "lucide-react";
---

<section id="experience" class="py-20 px-4 bg-muted/30">
  <div class="container mx-auto">
    <h2 class="text-3xl font-bold mb-12 text-center">Experience</h2>
    
    <div class="max-w-4xl mx-auto">
      <div class="relative">
        <div class="absolute left-4 md:left-1/2 top-0 bottom-0 w-px bg-border md:-translate-x-1/2"></div>
        
        <div class="space-y-8">
          {experiences.map((exp, index) => (
            <div class={`relative flex flex-col md:flex-row gap-4 ${index % 2 === 0 ? 'md:flex-row-reverse' : ''}`}>
              <div class="absolute left-4 md:left-1/2 w-3 h-3 rounded-full bg-primary md:-translate-x-1/2 mt-1.5"></div>
              
              <div class="flex-1 md:text-right pl-12 md:pl-0 md:pr-8">
                <div class={`md:${index % 2 === 0 ? 'text-left' : 'text-right'}`}>
                  <p class="text-sm text-muted-foreground">{exp.period}</p>
                  <h3 class="font-semibold text-lg">{exp.title}</h3>
                  <div class="flex items-center gap-2 text-muted-foreground mb-2 md:justify-end">
                    {exp.type === "entrepreneurship" ? (
                      <Building2 className="h-4 w-4" />
                    ) : (
                      <Briefcase className="h-4 w-4" />
                    )}
                    <span>{exp.company}</span>
                    <span class="text-muted-foreground/50">•</span>
                    <span>{exp.location}</span>
                  </div>
                </div>
              </div>
              
              <div class="flex-1 pl-12 md:pl-8">
                <div class="bg-card rounded-lg border border-border p-6">
                  <p class="text-muted-foreground text-sm mb-4">{exp.description}</p>
                  
                  <ul class="space-y-2 mb-4">
                    {exp.highlights.slice(0, 3).map((highlight) => (
                      <li class="text-sm flex items-start gap-2">
                        <span class="text-primary mt-1.5">•</span>
                        <span>{highlight}</span>
                      </li>
                    ))}
                  </ul>
                  
                  {exp.roles && (
                    <div class="flex flex-wrap gap-2">
                      {exp.roles.map((role) => (
                        <Badge variant="outline" className="text-xs">{role}</Badge>
                      ))}
                    </div>
                  )}
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
