---
import { experiences } from "@/data/experience";
import { Badge } from "@/components/ui/badge";
import { Briefcase, Building2 } from "lucide-react";
---

<section id="experience" class="py-20 px-4 gradient-bg">
  <div class="container mx-auto">
    <div class="fade-in">
      <h2 class="text-3xl font-bold mb-12 text-center">Experience</h2>
    </div>
    
    <div class="max-w-4xl mx-auto">
      <div class="relative">
        <!-- Animated Timeline Line -->
        <div class="timeline-line"></div>
        
        <div class="space-y-8">
          {[...experiences].reverse().map((exp, index) => (
            <div class={`fade-in-${index % 2 === 0 ? 'right' : 'left'} stagger-${((index % 4) + 1)}`}>
              <div class={`timeline-item relative flex flex-col md:flex-row gap-4 ${index % 2 === 0 ? 'md:flex-row-reverse' : ''}`}>
                <div class="timeline-dot-wrapper">
                  <div class="timeline-dot"></div>
                  <div class="timeline-dot-pulse"></div>
                </div>
                
                <!-- Info Column (period, title, company) -->
                <div class={`flex-1 pl-12 md:pl-0 ${index % 2 === 0 ? 'md:pl-12' : 'md:pr-8'}`}>
                  <div class={`flex flex-col ${index % 2 === 0 ? 'md:items-start md:text-left' : 'md:items-end md:text-right'}`}>
                    <p class="text-sm text-accent font-medium">{exp.period}</p>
                    <h3 class="font-semibold text-lg">{exp.title}</h3>
                    <div class={`flex items-center gap-2 text-muted-foreground mb-2 flex-wrap ${index % 2 === 0 ? 'md:justify-start' : 'md:justify-end'}`}>
                      {exp.type === "entrepreneurship" ? (
                        <Building2 className="h-4 w-4 text-accent shrink-0" />
                      ) : (
                        <Briefcase className="h-4 w-4 text-highlight shrink-0" />
                      )}
                      <span>{exp.company}</span>
                      <span class="text-muted-foreground/50">•</span>
                      <span>{exp.location}</span>
                    </div>
                  </div>
                </div>
                
                <!-- Card Column -->
                <div class={`flex-1 pl-12 ${index % 2 === 0 ? 'md:pr-12' : 'md:pl-8'}`}>
                  <div class="timeline-card bg-card rounded-lg border border-border p-6 hover-lift hover-glow">
                    <p class="text-muted-foreground text-sm mb-4">{exp.description}</p>
                    
                    <ul class="space-y-2 mb-4">
                      {exp.highlights.slice(0, 3).map((highlight) => (
                        <li class="text-sm flex items-start gap-2">
                          <span class="text-accent mt-1.5">•</span>
                          <span>{highlight}</span>
                        </li>
                      ))}
                    </ul>
                    
                    {exp.roles && (
                      <div class="flex flex-wrap gap-2">
                        {exp.roles.map((role) => (
                          <Badge variant="outline" className="text-xs hover:bg-accent/10 hover:text-accent hover:border-accent/50 transition-colors">{role}</Badge>
                        ))}
                      </div>
                    )}
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .timeline-line {
    position: absolute;
    left: 16px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(180deg, 
      transparent 0%,
      var(--color-accent) 10%,
      var(--color-highlight) 50%,
      var(--color-accent) 90%,
      transparent 100%
    );
    opacity: 0.4;
  }
  
  @media (min-width: 768px) {
    .timeline-line {
      left: 50%;
      transform: translateX(-50%);
    }
  }
  
  .timeline-dot-wrapper {
    position: absolute;
    left: 10px;
    top: 6px;
    z-index: 10;
  }
  
  @media (min-width: 768px) {
    .timeline-dot-wrapper {
      left: 50%;
      transform: translateX(-50%);
    }
  }
  
  .timeline-dot {
    width: 14px;
    height: 14px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--color-accent), var(--color-highlight));
    box-shadow: 0 0 0 4px rgba(245, 158, 11, 0.15);
    position: relative;
    z-index: 2;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .timeline-item:hover .timeline-dot {
    transform: scale(1.2);
    box-shadow: 0 0 0 6px rgba(245, 158, 11, 0.25);
  }
  
  .timeline-dot-pulse {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 14px;
    height: 14px;
    border-radius: 50%;
    background: var(--color-accent);
    opacity: 0;
    animation: pulse 2s ease-out infinite;
    z-index: 1;
  }
  
  .timeline-item:hover .timeline-dot-pulse {
    animation: pulse 1.5s ease-out infinite;
  }
  
  @keyframes pulse {
    0% {
      opacity: 0.6;
      transform: translate(-50%, -50%) scale(1);
    }
    100% {
      opacity: 0;
      transform: translate(-50%, -50%) scale(2.5);
    }
  }
  
  .timeline-card {
    position: relative;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
  }
  
  .timeline-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 3px;
    height: 0;
    background: linear-gradient(180deg, var(--color-accent), var(--color-highlight));
    transition: height 0.4s ease;
    border-radius: 0 2px 2px 0;
  }
  
  .timeline-item:hover .timeline-card::before {
    height: 100%;
  }
  
  .timeline-item:hover .timeline-card {
    border-color: var(--color-accent);
  }
  
  @media (prefers-reduced-motion: reduce) {
    .timeline-dot-pulse {
      animation: none;
    }
    .timeline-card::before {
      transition: none;
    }
    .timeline-dot {
      transition: none;
    }
  }
</style>
