---
import { summary } from "@/data/summary";
import { skills, skillCategories } from "@/data/skills";
---

<section id="about" class="py-20 bg-muted/20 relative overflow-hidden">
  <!-- Decorative background element -->
  <div class="absolute -top-24 -right-24 w-64 h-64 bg-accent/5 blur-[100px] rounded-full pointer-events-none"></div>
  
  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-6xl mx-auto flex flex-col lg:flex-row items-start gap-12 lg:gap-20">
      
      <!-- Bio Side -->
      <div class="flex-1 space-y-8 fade-in">
        <div class="relative">
          <h2 class="text-3xl font-bold tracking-tight">About Me</h2>
          <div class="absolute -bottom-2 left-0 w-12 h-1 bg-accent rounded-full"></div>
        </div>
        
        <div class="prose prose-sm md:prose-base dark:prose-invert max-w-none text-muted-foreground leading-relaxed">
          {summary.bio.split('\n\n').map((paragraph) => (
            <p class="mb-4 last:mb-0">{paragraph}</p>
          ))}
        </div>
      </div>
      
      <!-- Skills Side -->
      <div class="flex-1 w-full lg:max-w-[500px] fade-in stagger-1">
        <div class="mb-8">
          <h3 class="text-xl font-semibold tracking-tight">Skills & Expertise</h3>
          <p class="text-xs text-muted-foreground mt-1 uppercase tracking-widest font-medium opacity-70">
            Professional core competencies
          </p>
        </div>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-x-8 gap-y-8">
          {skillCategories.map((category) => (
            <div class="space-y-3">
              <h4 class="text-[10px] font-bold text-accent uppercase tracking-[0.2em] border-l-2 border-accent/30 pl-3 py-0.5">
                {category}
              </h4>
              <div class="flex flex-wrap gap-1.5">
                {skills
                  .filter((skill) => skill.category === category)
                  .map((skill) => (
                    <span class="text-[11px] font-medium py-1 px-2.5 bg-background/50 border border-border/50 rounded-md text-muted-foreground/80 hover:text-foreground hover:border-accent/30 transition-all cursor-default block">
                      {skill.name}
                    </span>
                  ))}
              </div>
            </div>
          ))}
        </div>
      </div>
      
    </div>
  </div>
</section>
