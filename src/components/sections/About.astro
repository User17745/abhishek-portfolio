---
import { summary } from "@/data/summary";
import { skills, skillCategories } from "@/data/skills";
import { experiences } from "@/data/experience";
import { Briefcase, Building2, MapPin, Sparkles, Plus } from "lucide-react";
import { decodeHTMLEntities } from "@/lib/utils";

// Sort experiences descending (latest first)
const sortedExperiences = [...experiences];

// Group skills for categorization within rows
const skillsByCategoryRow1 = skillCategories.slice(0, 3).map(cat => ({
  category: cat,
  items: skills.filter(s => s.category === cat)
}));

const skillsByCategoryRow2 = skillCategories.slice(3).map(cat => ({
  category: cat,
  items: skills.filter(s => s.category === cat)
}));
---

<section id="about-container" class="relative bg-background">
  <!-- Dynamic Background elements -->
  <div class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none">
    <div class="absolute top-[-10%] left-[-10%] w-[40%] h-[40%] bg-accent/5 blur-[120px] rounded-full"></div>
    <div class="absolute bottom-[-10%] right-[-10%] w-[40%] h-[40%] bg-blue-500/5 blur-[120px] rounded-full"></div>
  </div>

  <div id="sticky-scroll-wrapper" class="relative h-[500vh]">
    <div id="main-sticky-container" class="sticky top-0 h-screen w-full flex flex-col lg:flex-row lg:overflow-hidden bg-background">
      
      <!-- LEFT COLUMN: ABOUT & SKILLS -->
      <div class="w-full lg:w-1/2 h-full flex flex-col border-r border-border/80 z-20 bg-background/50 backdrop-blur-sm">
        <!-- Top Half: About Me -->
        <div class="lg:h-1/2 p-6 sm:p-16 lg:p-24 pt-24 sm:pt-40 lg:pt-48 flex flex-col justify-center bg-background relative overflow-hidden min-h-[300px] lg:min-h-[400px]">
          <div class="max-w-[540px] space-y-4 lg:space-y-6 relative z-10">
            <div class="inline-flex items-center gap-2 px-3 py-1 lg:px-4 lg:py-1.5 rounded-full bg-accent text-white border border-accent/30 text-[8px] lg:text-[9px] uppercase tracking-[0.2em] font-black shadow-lg shadow-accent/20">
              <Sparkles size={10} />
              About Me
            </div>
            <h2 class="text-2xl lg:text-5xl font-black tracking-tighter leading-[0.9] uppercase text-foreground">
              Abhishek<br/>Aggarwal
            </h2>
            <div class="prose prose-sm lg:prose-base dark:prose-invert text-foreground/90 font-bold leading-snug lg:leading-relaxed overflow-y-auto max-h-[200px] lg:max-h-none pr-4 lg:pr-0">
              <p set:html={decodeHTMLEntities(summary.bio.split('\n\n')[0])} />
            </div>
          </div>
          <!-- Corner Accent -->
          <div class="absolute top-0 right-0 p-6 lg:p-12 opacity-[0.03] lg:opacity-[0.05] dark:opacity-[0.1]">
            <Plus size={80} className="lg:w-[120px] lg:h-[120px]" />
          </div>
        </div>

        <!-- Bottom Half: Skills (Individual Pills) -->
        <div class="lg:h-1/2 p-6 sm:p-16 relative flex flex-col justify-center bg-muted/40 dark:bg-muted/20 border-t border-border/80 overflow-hidden">
          <div class="mb-6 lg:mb-12 relative z-20">
             <h3 class="text-[9px] lg:text-[10px] font-black uppercase tracking-[0.5em] text-foreground mb-2 ml-1">Expertise Matrix</h3>
             <div class="h-[2px] w-12 lg:w-20 bg-gradient-to-r from-accent to-transparent"></div>
          </div>

          <!-- Mobile: Auto-Scroll Cloud | Desktop: Animated Rows -->
          <div class="space-y-4 lg:space-y-8 relative z-10 overflow-hidden lg:overflow-visible">
            <!-- Row 1 -->
            <div class="flex overflow-hidden lg:overflow-visible group/skills">
              <div id="skill-row-1" class="flex gap-3 lg:gap-4 whitespace-nowrap will-change-transform min-w-max lg:min-w-0 mobile-auto-scroll">
                {skillsByCategoryRow1.map((group) => (
                  <div class="flex items-center gap-2 group/skillset">
                    <div class="px-3 py-1.5 lg:px-6 lg:py-3 bg-accent text-white rounded-full text-[8px] lg:text-[10px] font-black uppercase tracking-widest shadow-xl shadow-accent/20 border border-accent/50 z-10">
                      {group.category}
                    </div>
                    <div class="flex gap-2">
                      {group.items.map(skill => (
                        <span class="px-3 py-1.5 lg:px-5 lg:py-3 bg-background border border-border/40 rounded-full text-[8px] lg:text-[10px] font-bold text-muted-foreground uppercase tracking-wider hover:border-accent/40 hover:text-accent transition-all duration-300">
                          {skill.name}
                        </span>
                      ))}
                    </div>
                  </div>
                ))}
              </div>
            </div>
            
            <!-- Row 2 -->
            <div class="flex overflow-hidden lg:overflow-visible group/skills">
              <div id="skill-row-2" class="flex gap-3 lg:gap-4 whitespace-nowrap will-change-transform min-w-max lg:min-w-0 mobile-auto-scroll-reverse">
                {skillsByCategoryRow2.map((group) => (
                  <div class="flex items-center gap-2 group/skillset">
                    <div class="px-3 py-1.5 lg:px-6 lg:py-3 bg-blue-600 text-white rounded-full text-[8px] lg:text-[10px] font-black uppercase tracking-widest shadow-xl shadow-blue-500/20 border border-blue-400/50 z-10">
                      {group.category}
                    </div>
                    <div class="flex gap-2">
                      {group.items.map(skill => (
                        <span class="px-3 py-1.5 lg:px-5 lg:py-3 bg-background border border-border/40 rounded-full text-[8px] lg:text-[10px] font-bold text-muted-foreground uppercase tracking-wider hover:border-blue-400/40 hover:text-blue-500 transition-all duration-300">
                          {skill.name}
                        </span>
                      ))}
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </div>
          
          <!-- Masked edges -->
          <div class="absolute inset-y-0 left-0 w-16 lg:w-32 bg-gradient-to-r from-background to-transparent pointer-events-none z-20"></div>
          <div class="absolute inset-y-0 right-0 w-16 lg:w-32 bg-gradient-to-l from-background to-transparent pointer-events-none z-20"></div>
        </div>
      </div>

      <!-- RIGHT COLUMN: MINIMAL CHIC TIMELINE -->
      <div class="w-full lg:w-1/2 min-h-screen lg:h-full bg-muted/10 dark:bg-card/5 relative flex flex-col group/timeline">
        <!-- Persistent Header -->
        <div class="p-4 lg:p-10 flex items-center justify-between sticky top-[80px] lg:top-20 z-30 bg-background/95 backdrop-blur-2xl border border-border/80 shadow-lg lg:shadow-xl mx-2 lg:mx-6 mt-2 lg:mt-6 rounded-xl lg:rounded-[2rem]">
           <div class="flex items-center gap-2 lg:gap-4">
             <div class="relative">
               <div class="w-1.5 h-1.5 lg:w-3 lg:h-3 rounded-full bg-accent animate-ping absolute inset-0"></div>
               <div class="w-1.5 h-1.5 lg:w-3 lg:h-3 rounded-full bg-accent relative z-10"></div>
             </div>
             <h3 class="text-[9px] lg:text-xs font-black uppercase tracking-[0.3em] lg:tracking-[0.6em] text-foreground">Timeline</h3>
           </div>
           
           <div class="flex items-center gap-2 lg:gap-4">
              <span id="scroll-percentage" class="text-[8px] lg:text-[10px] font-mono font-black text-foreground/60">00%</span>
              <div class="flex gap-1 lg:gap-1.5" id="exp-indicator">
                {sortedExperiences.map((_, i) => (
                  <div class={`w-1 lg:w-1.5 h-2.5 lg:h-4 rounded-full bg-foreground/10 border border-border/40 transition-all duration-500`} data-dot={i}></div>
                ))}
              </div>
           </div>
        </div>

        <div class="flex-1 lg:overflow-hidden relative">
          <!-- Central Timeline Line -->
          <div class="absolute left-8 lg:left-24 top-0 bottom-0 w-[4px] bg-border/60">
            <div id="timeline-progress-line" class="w-full bg-accent absolute top-0 left-0 origin-top scale-y-0 transition-transform duration-300 shadow-[0_0_10px_rgba(245,158,11,0.5)]"></div>
          </div>

          <div id="experience-vertical-track" class="px-4 lg:px-24 pt-8 lg:pt-32 pb-40 lg:pb-60 flex flex-col gap-8 lg:gap-32 will-change-transform relative z-10">
            {sortedExperiences.map((exp, idx) => (
              <div class="relative group/exp timeline-item" data-index={idx}>
                <!-- Year Marker (Desktop Only) -->
                <div class="absolute left-[-120px] top-4 text-[10px] font-black font-mono text-muted-foreground/30 mix-blend-difference hidden lg:block uppercase tracking-tighter">
                  {exp.period.split(" - ")[0]}
                </div>

                <div class="space-y-3 lg:space-y-6">
                  <!-- Connective Element -->
                  <div class="flex items-center gap-2 lg:gap-6">
                    <div class="w-2.5 h-2.5 lg:w-4 lg:h-4 rounded-full bg-background border-[2px] lg:border-[3px] border-accent z-20 shadow-[0_0_10px_rgba(245,158,11,0.2)] group-hover/exp:shadow-[0_0_20px_rgba(245,158,11,0.4)] transition-all"></div>
                    <div class="h-[1px] w-4 lg:w-12 bg-accent/20"></div>
                    <span class="text-[7px] lg:text-[9px] font-black uppercase tracking-widest text-accent/60">{exp.period}</span>
                  </div>

                  <div class="bg-background border border-border/40 hover:border-accent/40 p-4 lg:p-10 rounded-xl lg:rounded-[2.5rem] transition-all duration-700 shadow-sm hover:shadow-xl group-hover/exp:-translate-y-1 relative overflow-hidden">
                    <!-- Background Initial Badge -->
                    <div class="absolute -bottom-2 lg:-bottom-6 -right-2 lg:-right-6 text-6xl lg:text-9xl font-black text-muted-foreground/5 pointer-events-none select-none italic">
                      {exp.company.charAt(0)}
                    </div>

                    <div class="flex flex-col gap-3 lg:gap-6 relative z-10">
                      <div class="space-y-0.5">
                        <h4 class="text-base lg:text-2xl font-black uppercase tracking-tight leading-tight group-hover/exp:text-accent transition-colors" set:html={decodeHTMLEntities(exp.title)} />
                        <p class="text-[9px] lg:text-xs font-bold text-muted-foreground uppercase opacity-40 tracking-widest" set:html={decodeHTMLEntities(exp.company)} />
                      </div>

                      <p class="text-[11px] lg:text-base text-muted-foreground/80 leading-snug lg:leading-relaxed font-bold lg:font-medium" set:html={decodeHTMLEntities(exp.description)} />
                      
                      <div class="flex flex-wrap items-center gap-2 lg:gap-4 text-[8px] lg:text-[10px] font-bold text-muted-foreground/60 uppercase">
                        <span class="flex items-center gap-1 lg:gap-2 bg-muted/50 px-2 py-1 lg:px-3 lg:py-1.5 rounded-full border border-border/40 truncate max-w-[120px]"><MapPin size={8} className="text-accent" /> {exp.location}</span>
                        <span class="flex items-center gap-1 lg:gap-2 bg-muted/50 px-2 py-1 lg:px-3 lg:py-1.5 rounded-full border border-border/40 whitespace-nowrap"><Briefcase size={8} className="text-accent" /> {exp.type}</span>
                      </div>

                      {exp.roles && (
                        <div class="flex flex-wrap gap-1 lg:gap-2 pt-4 lg:pt-8 border-t border-border/10">
                          {exp.roles.slice(0, 4).map(role => (
                            <span class="text-[7px] lg:text-[10px] font-black px-2 py-1 lg:px-4 lg:py-2 rounded-lg lg:rounded-xl bg-muted border border-border/60 text-muted-foreground hover:bg-accent/5 hover:text-accent hover:border-accent/20 transition-colors uppercase tracking-tight">{role}</span>
                          ))}
                        </div>
                      )}
                    </div>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  function setupDashboardScroll() {
    const scrollWrapper = document.getElementById('sticky-scroll-wrapper');
    const skillRow1 = document.getElementById('skill-row-1') as HTMLElement;
    const skillRow2 = document.getElementById('skill-row-2') as HTMLElement;
    const expTrack = document.getElementById('experience-vertical-track') as HTMLElement;
    const progressLine = document.getElementById('timeline-progress-line') as HTMLElement;
    const scrollPct = document.getElementById('scroll-percentage');
    const items = document.querySelectorAll('.timeline-item');
    
    if (!scrollWrapper || !skillRow1 || !skillRow2 || !expTrack) return;

    const onScroll = () => {
      const rect = scrollWrapper.getBoundingClientRect();
      const viewHeight = window.innerHeight;
      const totalScrollable = Math.max(1, scrollWrapper.offsetHeight - viewHeight);
      const currentScroll = Math.max(0, Math.min(totalScrollable, -rect.top));
      const progress = totalScrollable > 0 ? currentScroll / totalScrollable : 0;

      // Desktop Only effects
      if (window.innerWidth >= 1024) {
        // 1. Horizontal Skills 
        const s1Range = skillRow1.scrollWidth - (window.innerWidth / 3);
        const s2Range = skillRow2.scrollWidth - (window.innerWidth / 3);
        
        if (s1Range > 0) skillRow1.style.transform = `translateX(${-(progress * s1Range)}px)`;
        if (s2Range > 0) skillRow2.style.transform = `translateX(${-( (1 - progress) * s2Range )}px)`;

        // 2. Vertical Timeline (Visual Line)
        const eRange = expTrack.scrollHeight - (viewHeight * 0.4);
        if (eRange > 0) {
          expTrack.style.transform = `translateY(${-(progress * eRange)}px)`;
          if (progressLine) progressLine.style.transform = `scaleY(${progress})`;
        }
      } else {
        // Mobile only: update progress line based on simple scroll
        if (progressLine) progressLine.style.transform = `scaleY(${progress})`;
      }

      // 3. UI Indicators
      if (scrollPct) scrollPct.innerText = `${Math.round(progress * 100).toString().padStart(2, '0')}%`;

      items.forEach((item, i) => {
        const dot = document.querySelector(`[data-dot="${i}"]`) as HTMLElement;
        if (dot) {
          const itemRect = item.getBoundingClientRect();
          const isPassed = itemRect.top < viewHeight / 2;
          const isActive = isPassed && itemRect.bottom > viewHeight / 2;
          
          dot.style.background = isPassed ? "var(--color-accent)" : "rgba(245,158,11,0.1)";
          dot.style.opacity = isPassed ? "1" : "0.3";
          dot.style.height = window.innerWidth >= 1024 ? (isActive ? "24px" : "12px") : (isActive ? "16px" : "8px");
        }
      });
    };

    window.addEventListener('scroll', onScroll, { passive: true });
    onScroll(); 
  }

  document.addEventListener('astro:page-load', setupDashboardScroll);
  document.addEventListener('DOMContentLoaded', setupDashboardScroll);
</script>

<style>
  .will-change-transform {
    will-change: transform;
    transition: transform 0.15s cubic-bezier(0.16, 1, 0.3, 1);
  }

  @keyframes auto-scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  @media (max-width: 1024px) {
    #sticky-scroll-wrapper { height: auto !important; }
    #main-sticky-container { 
      position: relative !important; 
      height: auto !important; 
      overflow: visible !important; 
    }
    
    .mobile-auto-scroll {
      animation: auto-scroll 30s linear infinite;
    }
    .mobile-auto-scroll-reverse {
      animation: auto-scroll 30s linear infinite reverse;
    }
    
    /* Allow manual scroll to override if user touches */
    .mobile-auto-scroll:active,
    .mobile-auto-scroll-reverse:active {
      animation-play-state: paused;
    }
  }

  /* Custom Scrollbar for touch regions */
  .no-scrollbar::-webkit-scrollbar {
    display: none;
  }
  .no-scrollbar {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style>
