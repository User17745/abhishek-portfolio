---
import { summary } from "@/data/summary";
import { skills, skillCategories } from "@/data/skills";
import ScrollAnimation from "@/components/shared/ScrollAnimation";
---

<section id="about" class="py-20 px-4">
  <div class="container mx-auto">
    <div class="max-w-4xl mx-auto">
      <ScrollAnimation>
        <h2 class="text-3xl font-bold mb-8">About Me</h2>
      </ScrollAnimation>
      
      <ScrollAnimation delay={1}>
        <div class="prose prose-lg dark:prose-invert max-w-none mb-12">
          {summary.bio.split('\n\n').map((paragraph) => (
            <p class="text-muted-foreground mb-4">{paragraph}</p>
          ))}
        </div>
      </ScrollAnimation>
      
      <ScrollAnimation delay={2}>
        <h3 class="text-xl font-semibold mb-6">Skills & Expertise</h3>
      </ScrollAnimation>
      
      <div class="space-y-6">
        {skillCategories.map((category, index) => (
          <ScrollAnimation delay={((index % 3) + 3) as 1|2|3|4|5|6}>
            <div class="accent-dot ml-4">
              <h4 class="text-sm font-semibold text-foreground mb-3 uppercase tracking-wider">
                {category}
              </h4>
              <div class="flex flex-wrap gap-2 ml-[-4px]">
                {skills
                  .filter((skill) => skill.category === category)
                  .map((skill) => (
                    <span className="skill-badge px-3 py-1 rounded-full text-sm">
                      {skill.name}
                    </span>
                  ))}
              </div>
            </div>
          </ScrollAnimation>
        ))}
      </div>
    </div>
  </div>
</section>
