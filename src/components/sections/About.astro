---
import { summary } from "@/data/summary";
import { skills, skillCategories } from "@/data/skills";
---

<section id="about" class="py-20 px-4">
  <div class="container mx-auto">
    <div class="max-w-5xl mx-auto">
      <div class="fade-in">
        <h2 class="text-3xl font-bold mb-8">About Me</h2>
      </div>
      
      <div class="fade-in stagger-1">
        <div class="flex flex-col md:flex-row gap-8 items-start mb-12">
          <div class="shrink-0">
            <div class="relative">
              <div class="w-40 h-40 md:w-48 md:h-48 rounded-2xl overflow-hidden border-2 border-border shadow-lg">
                <img 
                  src="/profile.webp" 
                  alt="Abhishek Aggarwal"
                  class="w-full h-full object-cover"
                  loading="lazy"
                />
              </div>
              <div class="absolute -bottom-2 -right-2 w-12 h-12 rounded-lg bg-gradient-to-br from-accent to-highlight flex items-center justify-center text-white font-bold text-lg shadow-md">
                AA
              </div>
            </div>
          </div>
          
          <div class="flex-1">
            <div class="prose prose-lg dark:prose-invert max-w-none">
              {summary.bio.split('\n\n').map((paragraph) => (
                <p class="text-muted-foreground mb-4">{paragraph}</p>
              ))}
            </div>
          </div>
        </div>
      </div>
      
      <div class="fade-in stagger-2">
        <h3 class="text-xl font-semibold mb-8">Skills & Expertise</h3>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {skillCategories.map((category, index) => (
          <div class={`fade-in stagger-${((index % 3) + 3)}`}>
            <div class="bg-card rounded-xl border border-border p-5 hover:border-accent/30 transition-colors">
              <h4 class="text-sm font-semibold text-accent mb-4 uppercase tracking-wider">
                {category}
              </h4>
              <div class="flex flex-wrap gap-2">
                {skills
                  .filter((skill) => skill.category === category)
                  .map((skill) => (
                    <span class="skill-badge px-3 py-1.5 rounded-full text-sm">
                      {skill.name}
                    </span>
                  ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
