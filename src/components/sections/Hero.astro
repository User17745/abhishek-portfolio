---
import { summary, stats } from "@/data/summary";
import { Button } from "@/components/ui/button";
import { ArrowDown, Linkedin, Info } from "lucide-react";
import { siteConfig } from "@/lib/config";
---

<section id="hero" class="min-h-screen flex items-center justify-center pt-16 px-4 hero-bg">
  <div class="container mx-auto text-center">
    <div class="max-w-3xl mx-auto space-y-6">
      <div class="fade-in">
        <p class="text-highlight text-sm uppercase tracking-widest font-medium">
          {summary.subtitle}
        </p>
      </div>
      
      <div class="fade-in stagger-1">
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold tracking-tight">
          {summary.headline}
        </h1>
      </div>
      
      <div class="fade-in stagger-2">
        <p class="text-xl text-muted-foreground">
          {summary.tagline}
        </p>
      </div>
      
      <div class="fade-in stagger-3">
        <div class="flex flex-wrap justify-center gap-3 pt-4">
          <Button asChild size="lg" className="cta-button">
            <a href="#contact">Let's Talk</a>
          </Button>
          <Button 
            variant="outline" 
            size="lg" 
            asChild 
            className="gradient-border hover:border-[#0A66C2] hover:bg-[#0A66C2]/10"
          >
            <a 
              href={siteConfig.links.linkedin} 
              target="_blank" 
              rel="noopener noreferrer"
              aria-label="Connect on LinkedIn"
            >
              <Linkedin className="h-5 w-5 text-[#0A66C2]" />
            </a>
          </Button>
        </div>
      </div>
      
      <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-6 gap-3 pt-12">
        {stats.map((stat, index) => (
          <div class={`fade-in stagger-${((index % 6) + 1)}`}>
            <div class="group relative p-4 rounded-lg bg-card border border-border stat-card hover-lift">
              <div class="flex items-center justify-center gap-1">
                <div class="text-2xl font-bold text-highlight">{stat.value}</div>
                {stat.tooltip && (
                  <Info className="h-3 w-3 text-muted-foreground opacity-50 group-hover:opacity-100 transition-opacity" />
                )}
              </div>
              <div class="text-xs text-muted-foreground">{stat.label}</div>
              
              {stat.tooltip && (
                <div class="absolute bottom-full left-1/2 -translate-x-1/2 mb-2 px-3 py-2 bg-popover text-popover-foreground text-xs rounded-lg shadow-lg opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none z-50 w-48 text-left border border-border">
                  {stat.tooltip}
                  <div class="absolute top-full left-1/2 -translate-x-1/2 border-4 border-transparent border-t-popover"></div>
                </div>
              )}
            </div>
          </div>
        ))}
      </div>
      
      <div class="fade-in stagger-6">
        <a 
          href="#about" 
          class="inline-flex items-center justify-center mt-12 text-muted-foreground hover:text-accent transition-colors"
          aria-label="Scroll to About section"
        >
          <ArrowDown className="h-6 w-6 animate-bounce" />
        </a>
      </div>
    </div>
  </div>
</section>
