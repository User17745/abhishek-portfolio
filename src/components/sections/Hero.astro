---
import { summary, stats } from "@/data/summary";
import { Button } from "@/components/ui/button";
import { ArrowDown, Linkedin } from "lucide-react";
import { siteConfig } from "@/lib/config";
---

<section id="hero" class="min-h-screen flex items-center justify-center pt-16 px-4 hero-bg">
  <div class="container mx-auto text-center">
    <div class="max-w-3xl mx-auto space-y-6">
      <div class="fade-in">
        <p class="text-accent text-sm uppercase tracking-widest font-medium">
          Welcome to my portfolio
        </p>
      </div>
      
      <div class="fade-in stagger-1">
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold tracking-tight gradient-text">
          {summary.title}
        </h1>
      </div>
      
      <div class="fade-in stagger-2">
        <p class="text-xl text-muted-foreground">
          {summary.subtitle}
        </p>
      </div>
      
      <div class="fade-in stagger-3">
        <p class="text-muted-foreground max-w-xl mx-auto">
          {summary.tagline}
        </p>
      </div>
      
      <div class="fade-in stagger-4">
        <div class="flex flex-wrap justify-center gap-4 pt-4">
          <Button asChild size="lg" className="cta-button">
            <a href="#contact">Get in Touch</a>
          </Button>
          <Button variant="outline" size="lg" asChild className="gradient-border">
            <a href={siteConfig.links.linkedin} target="_blank" rel="noopener noreferrer">
              <Linkedin className="mr-2 h-4 w-4" />
              LinkedIn
            </a>
          </Button>
        </div>
      </div>
      
      <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-6 gap-4 pt-12">
        {stats.map((stat, index) => (
          <div class={`fade-in stagger-${((index % 6) + 1)}`}>
            <div class="p-4 rounded-lg bg-card border border-border stat-card hover-lift">
              <div class="text-2xl font-bold text-highlight">{stat.value}</div>
              <div class="text-xs text-muted-foreground">{stat.label}</div>
            </div>
          </div>
        ))}
      </div>
      
      <div class="fade-in stagger-6">
        <a 
          href="#about" 
          class="inline-flex items-center justify-center mt-12 text-muted-foreground hover:text-accent transition-colors"
        >
          <ArrowDown className="h-6 w-6 animate-bounce" />
        </a>
      </div>
    </div>
  </div>
</section>
