---
import { projects } from "@/data/projects";
import { brands } from "@/data/brands";
import { Badge } from "@/components/ui/badge";
import { decodeHTMLEntities } from "@/lib/utils";
import BrandLogo from "@/components/shared/BrandLogo";
import { Layers, Globe, Calendar, Terminal } from "lucide-react";

// Sort descending (latest first)
const sortedProjects = [...projects].sort((a, b) => {
  const yearA = parseInt(a.year.split('-')[0]);
  const yearB = parseInt(b.year.split('-')[0]);
  return yearB - yearA;
});

// Helper to find brand
const getBrandForProject = (client: string, platform?: string) => {
  if (platform?.toLowerCase().includes("kartmax")) {
    return brands.find(b => b.name === "KartmaX");
  }
  if (client.toLowerCase().includes("caneza")) {
    return brands.find(b => b.name === "Caneza (Rasasi)");
  }
  if (client.toLowerCase().includes("metro")) {
    return brands.find(b => b.name === "Metro Brands");
  }
  return brands.find(b => b.name.toLowerCase().includes(client.toLowerCase()) || 
                          client.toLowerCase().includes(b.name.toLowerCase()));
};
---

<section id="projects" class="py-32 relative overflow-hidden bg-muted/5">
  <!-- Decorative background -->
  <div class="absolute top-0 right-0 w-1/3 h-1/3 bg-accent/5 blur-[120px] rounded-full pointer-events-none"></div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="fade-in text-center mb-16">
      <h2 class="text-3xl font-bold mb-4">Featured Projects</h2>
      <p class="text-muted-foreground max-w-2xl mx-auto">
        Key implementations and product developments across enterprise, retail, and D2C domains.
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-6">
      {sortedProjects.map((project, index) => {
        const brand = getBrandForProject(project.client, project.platform);
        
        return (
          <div class="group relative">
            <div class="h-full flex flex-col bg-background/50 backdrop-blur-md border border-border/80 rounded-[2rem] overflow-hidden hover:border-accent/40 transition-all duration-500 shadow-sm hover:shadow-2xl hover:shadow-accent/5">
              
              <!-- Header Section -->
              <div class="p-6 border-b border-border/40 flex flex-col gap-6 items-start">
                <div class="flex items-center justify-between w-full">
                  {brand ? (
                    <div class="shrink-0 scale-75 origin-top-left">
                      <BrandLogo 
                        name={brand.name} 
                        logo={brand.logo} 
                        color={brand.color} 
                        size="lg" 
                      />
                    </div>
                  ) : <div class="h-14" />}
                  
                  <Badge variant="outline" className="text-[8px] font-black uppercase tracking-wider bg-accent/5 border-accent/20 text-accent h-fit">
                    {project.year}
                  </Badge>
                </div>
                
                <div class="space-y-2">
                  <h3 class="text-xl font-black uppercase tracking-tight leading-none group-hover:text-accent transition-colors" set:html={decodeHTMLEntities(project.title)} />
                  <p class="text-[10px] font-black text-muted-foreground/60 uppercase tracking-[0.2em]" set:html={decodeHTMLEntities(project.client)} />
                </div>
              </div>

              <!-- Content Section -->
              <div class="p-6 flex-1 flex flex-col gap-6">
                <div class="text-[13px] text-foreground/80 font-bold leading-snug">
                  <p set:html={decodeHTMLEntities(project.description)} />
                </div>

                <!-- Platform -->
                <div class="flex items-center gap-2 py-2.5 px-4 bg-muted/50 rounded-xl border border-border/40">
                  <Terminal size={12} className="text-accent" />
                  <span class="text-[8px] font-black uppercase tracking-widest text-foreground/80" set:html={decodeHTMLEntities(project.platform)} />
                </div>

                <!-- Metrics Grid -->
                {project.metrics && (
                  <div class="grid grid-cols-2 gap-3">
                    {project.metrics.map((metric) => (
                      <div class="p-4 rounded-2xl bg-accent/5 border border-accent/10 flex flex-col gap-0.5">
                        <span class="text-base font-black text-accent">{metric.value}</span>
                        <span class="text-[7px] font-bold text-muted-foreground uppercase tracking-widest leading-none">{metric.label}</span>
                      </div>
                    ))}
                  </div>
                )}

                <!-- Highlights -->
                <div class="space-y-3 mt-auto">
                  <ul class="space-y-2">
                    {project.highlights.slice(0, 3).map((highlight) => (
                      <li class="text-[10px] font-bold text-muted-foreground/70 flex items-start gap-2 leading-tight">
                        <div class="w-0.5 h-0.5 rounded-full bg-accent mt-1.5 shrink-0" />
                        <span set:html={decodeHTMLEntities(highlight)} />
                      </li>
                    ))}
                  </ul>
                </div>
              </div>

              <!-- Footer -->
              <div class="px-6 py-4 bg-accent/5 flex items-center justify-between border-t border-border/20">
                <div class="flex items-center gap-2">
                  <Globe size={10} className="text-muted-foreground" />
                  <span class="text-[8px] font-bold text-muted-foreground uppercase tracking-widest">{project.region}</span>
                </div>
                <div class="h-0.5 w-10 bg-accent/20 rounded-full" />
              </div>
            </div>
          </div>
        );
      })}
    </div>
  </div>
</section>
