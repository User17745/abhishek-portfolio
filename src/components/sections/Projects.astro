---
import { projects } from "@/data/projects";
import { brands } from "@/data/brands";
import { Badge } from "@/components/ui/badge";
import { decodeHTMLEntities } from "@/lib/utils";
import BrandLogo from "@/components/shared/BrandLogo";
import { Layers, Globe, Calendar, Terminal, Plus } from "lucide-react";

// Sort descending (latest first)
const sortedProjects = [...projects].sort((a, b) => {
  const yearA = parseInt(a.year.split('-')[0]);
  const yearB = parseInt(b.year.split('-')[0]);
  return yearB - yearA;
});

// Helper to find brand
const getBrandForProject = (client: string, platform?: string) => {
  if (platform?.toLowerCase().includes("kartmax")) {
    return brands.find(b => b.name === "KartmaX");
  }
  if (client.toLowerCase().includes("caneza")) {
    return brands.find(b => b.name === "Caneza (Rasasi)");
  }
  if (client.toLowerCase().includes("metro")) {
    return brands.find(b => b.name === "Metro Brands");
  }
  return brands.find(b => b.name.toLowerCase().includes(client.toLowerCase()) || 
                          client.toLowerCase().includes(b.name.toLowerCase()));
};
---

<section id="projects" class="py-32 relative overflow-hidden bg-muted/5">
  <!-- Decorative background -->
  <div class="absolute top-0 right-0 w-1/3 h-1/3 bg-accent/5 blur-[120px] rounded-full pointer-events-none"></div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="fade-in text-center mb-16">
      <h2 class="text-3xl font-bold mb-4">Featured Projects</h2>
      <p class="text-muted-foreground max-w-2xl mx-auto">
        Key implementations and product developments across enterprise, retail, and D2C domains.
      </p>
    </div>
    
    <div id="projects-grid" class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-4">
      {sortedProjects.map((project, index) => {
        const brand = getBrandForProject(project.client, project.platform);
        const initials = project.client.split(' ').map(w => w[0]).join('').slice(0, 2).toUpperCase();
        
        return (
          <div class={`group relative h-full project-card ${index >= 2 ? 'mobile-hidden' : ''}`}>
            <div class="h-full flex flex-col bg-background/40 backdrop-blur-md border border-border/60 rounded-2xl overflow-hidden hover:border-accent/40 transition-all duration-300 shadow-sm hover:shadow-xl relative">
              
              <!-- Background Watermark Logo -->
              <div class="absolute -bottom-6 -right-6 w-32 h-32 opacity-[0.08] dark:opacity-[0.15] grayscale pointer-events-none transition-all duration-500 group-hover:scale-110 group-hover:opacity-[0.15] flex items-center justify-center">
                {brand?.logo ? (
                  <img src={brand.logo} alt="" class="w-full h-full object-contain mix-blend-multiply dark:mix-blend-screen" />
                ) : (
                  <span class="text-6xl font-black italic text-muted-foreground/20">{initials}</span>
                )}
              </div>

              <!-- Header -->
              <div class="p-5 border-b border-border/40 space-y-2 relative z-10">
                <div class="flex items-center justify-between">
                  <span class="text-[9px] font-black text-accent bg-accent/10 px-2 py-0.5 rounded-full border border-accent/20">
                    {project.year}
                  </span>
                  <div class="flex items-center gap-1">
                    <Globe size={10} className="text-muted-foreground/30" />
                    <span class="text-[8px] font-bold text-muted-foreground/40 uppercase tracking-widest">{project.region}</span>
                  </div>
                </div>
                
                <div class="space-y-1">
                  <h3 class="text-lg font-black uppercase tracking-tight leading-tight group-hover:text-accent transition-colors" set:html={decodeHTMLEntities(project.title)} />
                  <p class="text-[9px] font-bold text-muted-foreground/50 uppercase tracking-widest leading-none">{project.client}</p>
                </div>
              </div>

              <!-- Main Content -->
              <div class="p-5 flex-1 flex flex-col gap-5 relative z-10">
                <p class="text-[12px] text-foreground/70 leading-snug font-medium line-clamp-3" set:html={decodeHTMLEntities(project.description)} />

                <!-- Platform Tag -->
                <div class="flex items-center gap-2 px-3 py-1 bg-muted/30 rounded-lg border border-border/40 w-fit">
                  <Terminal size={10} className="text-accent/70" />
                  <span class="text-[8px] font-black uppercase tracking-tight text-muted-foreground" set:html={decodeHTMLEntities(project.platform)} />
                </div>

                <!-- Compact Metrics -->
                {project.metrics && (
                  <div class="grid grid-cols-2 gap-2">
                    {project.metrics.map((metric) => (
                      <div class="p-3 rounded-xl bg-accent/5 border border-accent/10 flex flex-col justify-center">
                        <span class="text-sm font-black text-accent leading-none">{metric.value}</span>
                        <span class="text-[7px] font-bold text-muted-foreground/60 uppercase tracking-tighter mt-1 leading-none">{metric.label}</span>
                      </div>
                    ))}
                  </div>
                )}

                <!-- Highlights List -->
                <ul class="space-y-1.5 mt-auto">
                  {project.highlights.slice(0, 2).map((highlight) => (
                    <li class="text-[10px] text-muted-foreground/80 flex items-start gap-2 leading-tight">
                      <div class="w-1 h-1 rounded-full bg-accent/40 mt-1.5 shrink-0" />
                      <span class="line-clamp-2" set:html={decodeHTMLEntities(highlight)} />
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </div>
        );
      })}
    </div>

    <!-- View All Button (Mobile Only) -->
    <div class="mt-12 flex justify-center md:hidden">
      <button
        id="view-all-projects-btn"
        class="group relative z-20 flex items-center gap-2 text-[10px] font-bold uppercase tracking-[0.2em] text-muted-foreground hover:text-foreground px-8 py-6 rounded-full border border-border/40 bg-background/50 backdrop-blur-md hover:bg-background transition-all active:scale-95"
      >
        <span id="btn-text">View More</span>
        <Plus id="btn-icon" size={14} className="group-hover:rotate-90 transition-transform" />
      </button>
    </div>
  </div>
</section>

<script>
  function setupProjectExpansion() {
    const grid = document.getElementById('projects-grid');
    const btn = document.getElementById('view-all-projects-btn');
    const btnText = document.getElementById('btn-text');
    const btnIcon = document.getElementById('btn-icon');
    
    if (!grid || !btn || !btnText) return;

    let isExpanded = false;

    btn.addEventListener('click', () => {
      isExpanded = !isExpanded;
      
      const hiddenCards = grid.querySelectorAll('.mobile-hidden');
      const allCards = grid.querySelectorAll('.project-card');

      if (isExpanded) {
        allCards.forEach(card => card.classList.remove('mobile-hidden'));
        btnText.innerText = 'Show Less';
        if (btnIcon) btnIcon.style.transform = 'rotate(45deg)';
      } else {
        allCards.forEach((card, index) => {
          if (index >= 2) card.classList.add('mobile-hidden');
        });
        btnText.innerText = 'View More';
        if (btnIcon) btnIcon.style.transform = 'rotate(0deg)';
        
        // Scroll back to top of projects if collapsing
        const projectsSection = document.getElementById('projects');
        if (projectsSection) {
          projectsSection.scrollIntoView({ behavior: 'smooth' });
        }
      }
    });
  }

  document.addEventListener('astro:page-load', setupProjectExpansion);
  document.addEventListener('DOMContentLoaded', setupProjectExpansion);
</script>

<style>
  @media (max-width: 767px) {
    .mobile-hidden {
      display: none !important;
    }
  }
</style>
