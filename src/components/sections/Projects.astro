---
import { projects } from "@/data/projects";
import { brands } from "@/data/brands";
import { Badge } from "@/components/ui/badge";
import { decodeHTMLEntities } from "@/lib/utils";
import BrandLogo from "@/components/shared/BrandLogo";
import { Layers, Globe, Calendar, Terminal } from "lucide-react";

// Sort descending (latest first)
const sortedProjects = [...projects].sort((a, b) => {
  const yearA = parseInt(a.year.split('-')[0]);
  const yearB = parseInt(b.year.split('-')[0]);
  return yearB - yearA;
});

// Helper to find brand
const getBrandForProject = (client: string) => {
  return brands.find(b => b.name.toLowerCase().includes(client.toLowerCase()) || 
                          client.toLowerCase().includes(b.name.toLowerCase()));
};
---

<section id="projects" class="py-32 relative overflow-hidden bg-muted/5">
  <!-- Decorative background -->
  <div class="absolute top-0 right-0 w-1/3 h-1/3 bg-accent/5 blur-[120px] rounded-full pointer-events-none"></div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-3xl mb-20">
      <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-accent/10 border border-accent/20 text-accent text-[10px] uppercase tracking-widest font-black mb-6">
        <Layers size={12} />
        Case Studies
      </div>
      <h2 class="text-4xl lg:text-6xl font-black tracking-tighter uppercase mb-6">
        Featured<br/><span class="text-accent italic">Projects</span>
      </h2>
      <p class="text-lg text-muted-foreground font-medium leading-relaxed">
        A deep dive into technical architectures, product strategies, and digital transformations delivered across diverse markets and scales.
      </p>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      {sortedProjects.map((project, index) => {
        const brand = getBrandForProject(project.client);
        
        return (
          <div class="group relative">
            <div class="h-full flex flex-col bg-background/50 backdrop-blur-md border border-border/60 rounded-[2.5rem] overflow-hidden hover:border-accent/40 transition-all duration-500 shadow-sm hover:shadow-2xl hover:shadow-accent/5">
              
              <!-- Header Section -->
              <div class="p-8 sm:p-10 border-b border-border/40 flex flex-col sm:flex-row gap-8 items-start">
                {brand && (
                  <div class="shrink-0 scale-90 sm:scale-100 origin-top-left">
                    <BrandLogo 
                      name={brand.name} 
                      logo={brand.logo} 
                      color={brand.color} 
                      size="lg" 
                    />
                  </div>
                )}
                
                <div class="flex-1 space-y-4">
                  <div class="flex flex-wrap items-center gap-2">
                    <Badge variant="outline" className="text-[9px] font-black uppercase tracking-wider bg-accent/5 border-accent/20 text-accent">
                      {project.region}
                    </Badge>
                    <Badge variant="outline" className="text-[9px] font-black uppercase tracking-wider bg-blue-500/5 border-blue-500/20 text-blue-500">
                      {project.year}
                    </Badge>
                  </div>
                  
                  <h3 class="text-2xl sm:text-3xl font-black uppercase tracking-tight leading-[0.9] group-hover:text-accent transition-colors" set:html={decodeHTMLEntities(project.title)} />
                  <p class="text-sm font-bold text-muted-foreground/60 uppercase tracking-[0.2em]" set:html={decodeHTMLEntities(project.client)} />
                </div>
              </div>

              <!-- Content Section -->
              <div class="p-8 sm:p-10 flex-1 flex flex-col gap-8">
                <div class="prose prose-sm dark:prose-invert text-muted-foreground/80 font-medium leading-relaxed max-w-none">
                  <p set:html={decodeHTMLEntities(project.description)} />
                </div>

                <!-- Platform/Stacks -->
                <div class="flex items-center gap-3 py-4 px-6 bg-muted/50 rounded-2xl border border-border/40">
                  <Terminal size={14} className="text-accent" />
                  <span class="text-[10px] font-black uppercase tracking-widest text-foreground/80" set:html={decodeHTMLEntities(project.platform)} />
                </div>

                <!-- Metrics Grid -->
                {project.metrics && (
                  <div class="grid grid-cols-2 gap-4">
                    {project.metrics.map((metric) => (
                      <div class="p-6 rounded-[1.5rem] bg-accent/5 border border-accent/10 flex flex-col gap-1">
                        <span class="text-xl font-black text-accent">{metric.value}</span>
                        <span class="text-[9px] font-bold text-muted-foreground uppercase tracking-widest leading-none">{metric.label}</span>
                      </div>
                    ))}
                  </div>
                )}

                <!-- Highlights -->
                <div class="space-y-4 mt-auto">
                  <div class="text-[9px] font-black uppercase tracking-[0.4em] text-muted-foreground/40">Technical Highlights</div>
                  <ul class="grid grid-cols-1 sm:grid-cols-2 gap-x-8 gap-y-3">
                    {project.highlights.map((highlight) => (
                      <li class="text-[11px] font-bold text-muted-foreground/70 flex items-start gap-2 leading-tight">
                        <div class="w-1 h-1 rounded-full bg-accent mt-1.5 shrink-0" />
                        <span set:html={decodeHTMLEntities(highlight)} />
                      </li>
                    ))}
                  </ul>
                </div>
              </div>

              <!-- Footer/Detail link style -->
              <div class="px-10 py-6 bg-accent/5 flex items-center justify-between border-t border-border/20">
                <div class="flex items-center gap-2">
                  <Globe size={12} className="text-muted-foreground" />
                  <span class="text-[9px] font-bold text-muted-foreground uppercase tracking-widest">{project.region}</span>
                </div>
                <div class="h-1 w-12 bg-accent/20 rounded-full" />
              </div>
            </div>
          </div>
        );
      })}
    </div>
  </div>
</section>
