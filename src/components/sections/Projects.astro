---
import { projects } from "@/data/projects";
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { decodeHTMLEntities } from "@/lib/utils";
---

<section id="projects" class="py-20 px-4">
  <div class="container mx-auto">
    <div class="fade-in">
      <h2 class="text-3xl font-bold mb-4 text-center">Featured Projects</h2>
    </div>
    <div class="fade-in stagger-1">
      <p class="text-muted-foreground text-center mb-12 max-w-2xl mx-auto">
        Key implementations and product developments across enterprise, retail, and D2C domains.
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {projects.map((project, index) => (
        <div class={`scale-in stagger-${((index % 3) + 2)}`}>
          <div class="flex flex-col h-full rounded-lg border border-border bg-card text-card-foreground shadow-sm hover-lift hover-glow cursor-pointer gradient-border overflow-hidden">
            <div class="flex flex-col space-y-1.5 p-6 pb-4">
              <div class="flex items-start justify-between gap-2">
                <h3 class="text-lg font-semibold leading-none tracking-tight" set:html={decodeHTMLEntities(project.title)} />
                <Badge className="shrink-0 bg-accent/10 text-accent border-accent/20">{project.year}</Badge>
              </div>
              <p class="text-sm text-muted-foreground" set:html={decodeHTMLEntities(project.client)} />
            </div>
            <div class="p-6 pt-0 flex-1 flex flex-col">
              <p class="text-sm text-muted-foreground mb-4" set:html={decodeHTMLEntities(project.description)} />
              
              <div class="inline-flex items-center rounded-full border border-highlight/30 px-2.5 py-0.5 text-xs font-semibold text-highlight mb-4 w-fit" set:html={decodeHTMLEntities(project.platform)} />
              
              <ul class="space-y-1.5 mb-4">
                {project.highlights.slice(0, 2).map((highlight) => (
                  <li class="text-xs text-muted-foreground flex items-start gap-2">
                    <span class="text-accent">â€¢</span>
                    <span set:html={decodeHTMLEntities(highlight)} />
                  </li>
                ))}
              </ul>
              
              {project.metrics && (
                <div class="flex gap-4 mt-auto pt-4 border-t border-border">
                  {project.metrics.map((metric) => (
                    <div>
                      <div class="text-lg font-semibold text-highlight">{metric.value}</div>
                      <div class="text-xs text-muted-foreground">{metric.label}</div>
                    </div>
                  ))}
                </div>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
