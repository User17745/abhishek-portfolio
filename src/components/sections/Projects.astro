---
import { projects } from "@/data/projects";
import { brands } from "@/data/brands";
import { Badge } from "@/components/ui/badge";
import { decodeHTMLEntities } from "@/lib/utils";
import BrandLogo from "@/components/shared/BrandLogo";
import { Layers, Globe, Calendar, Terminal } from "lucide-react";

// Sort descending (latest first)
const sortedProjects = [...projects].sort((a, b) => {
  const yearA = parseInt(a.year.split('-')[0]);
  const yearB = parseInt(b.year.split('-')[0]);
  return yearB - yearA;
});

// Helper to find brand
const getBrandForProject = (client: string, platform?: string) => {
  if (platform?.toLowerCase().includes("kartmax")) {
    return brands.find(b => b.name === "KartmaX");
  }
  if (client.toLowerCase().includes("caneza")) {
    return brands.find(b => b.name === "Caneza (Rasasi)");
  }
  if (client.toLowerCase().includes("metro")) {
    return brands.find(b => b.name === "Metro Brands");
  }
  return brands.find(b => b.name.toLowerCase().includes(client.toLowerCase()) || 
                          client.toLowerCase().includes(b.name.toLowerCase()));
};
---

<section id="projects" class="py-32 relative overflow-hidden bg-muted/5">
  <!-- Decorative background -->
  <div class="absolute top-0 right-0 w-1/3 h-1/3 bg-accent/5 blur-[120px] rounded-full pointer-events-none"></div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="fade-in text-center mb-16">
      <h2 class="text-3xl font-bold mb-4">Featured Projects</h2>
      <p class="text-muted-foreground max-w-2xl mx-auto">
        Key implementations and product developments across enterprise, retail, and D2C domains.
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-4">
      {sortedProjects.map((project, index) => {
        const brand = getBrandForProject(project.client, project.platform);
        
        return (
          <div class="group relative h-full">
            <div class="h-full flex flex-col bg-background/40 backdrop-blur-md border border-border/60 rounded-2xl overflow-hidden hover:border-accent/40 transition-all duration-300 shadow-sm hover:shadow-xl">
              
              <!-- Header -->
              <div class="p-5 border-b border-border/40 space-y-3">
                <div class="flex items-center justify-between">
                  {brand ? (
                    <div class="shrink-0 scale-75 origin-left">
                      <BrandLogo 
                        name={brand.name} 
                        logo={brand.logo} 
                        color={brand.color} 
                        size="md" 
                      />
                    </div>
                  ) : <div class="h-10" />}
                  <span class="text-[9px] font-black text-accent bg-accent/10 px-2 py-0.5 rounded-full border border-accent/20">
                    {project.year}
                  </span>
                </div>
                
                <div class="space-y-1">
                  <h3 class="text-lg font-black uppercase tracking-tight leading-tight group-hover:text-accent transition-colors" set:html={decodeHTMLEntities(project.title)} />
                  <p class="text-[9px] font-bold text-muted-foreground/50 uppercase tracking-widest">{project.client}</p>
                </div>
              </div>

              <!-- Main Content -->
              <div class="p-5 flex-1 flex flex-col gap-5">
                <p class="text-[12px] text-foreground/70 leading-snug font-medium" set:html={decodeHTMLEntities(project.description)} />

                <!-- Platform Tag -->
                <div class="flex items-center gap-2 px-3 py-1.5 bg-muted/30 rounded-lg border border-border/40 w-fit">
                  <Terminal size={10} className="text-accent/70" />
                  <span class="text-[8px] font-black uppercase tracking-tight text-muted-foreground" set:html={decodeHTMLEntities(project.platform)} />
                </div>

                <!-- Compact Metrics -->
                {project.metrics && (
                  <div class="grid grid-cols-2 gap-2">
                    {project.metrics.map((metric) => (
                      <div class="p-3 rounded-xl bg-accent/5 border border-accent/10 flex flex-col">
                        <span class="text-sm font-black text-accent leading-none">{metric.value}</span>
                        <span class="text-[7px] font-bold text-muted-foreground/60 uppercase tracking-tighter mt-1">{metric.label}</span>
                      </div>
                    ))}
                  </div>
                )}

                <!-- Highlights List -->
                <ul class="space-y-1.5 mt-auto">
                  {project.highlights.slice(0, 3).map((highlight) => (
                    <li class="text-[10px] text-muted-foreground/80 flex items-start gap-2 leading-tight">
                      <div class="w-1 h-1 rounded-full bg-accent/40 mt-1.5 shrink-0" />
                      <span set:html={decodeHTMLEntities(highlight)} />
                    </li>
                  ))}
                </ul>
              </div>

              <!-- Footer -->
              <div class="px-5 py-3 bg-muted/20 flex items-center justify-between border-t border-border/10">
                <div class="flex items-center gap-1.5">
                  <Globe size={10} className="text-muted-foreground/40" />
                  <span class="text-[8px] font-bold text-muted-foreground/60 uppercase tracking-widest">{project.region}</span>
                </div>
              </div>
            </div>
          </div>
        );
      })}
    </div>
  </div>
</section>
