---
import { navItems, siteConfig } from "@/lib/config";
import ThemeToggle from "./ThemeToggle";
import MobileMenu from "./MobileMenu";
import { CookieToggle } from "./CookieToggle";

const items = navItems;
---

<header class="fixed top-0 left-0 right-0 z-40 bg-background/80 backdrop-blur-md border-b border-border w-full">
  <nav class="container mx-auto px-3 sm:px-4 h-16 flex items-center justify-between min-w-0 w-full max-w-full">
    <a href="/" class="flex items-center gap-1.5 sm:gap-2 group min-w-0 flex-shrink-0">
      <img 
        src="/profile.webp" 
        alt="Abhishek Aggarwal"
        class="w-7 h-7 sm:w-8 sm:h-8 rounded-full object-cover border-2 border-border group-hover:border-accent transition-colors flex-shrink-0"
      />
      <span class="font-bold text-lg sm:text-xl gradient-text truncate hidden sm:inline-block min-w-0">Abhishek</span>
    </a>
    
    <div class="hidden md:flex items-center gap-6">
      {items.map((item) => (
        <a
          href={item.href}
          class="text-sm text-muted-foreground hover:text-foreground transition-colors"
        >
          {item.label}
        </a>
      ))}
    </div>
    
    <div class="flex items-center gap-0.5 sm:gap-2 flex-shrink-0">
      <CookieToggle client:load />
      <ThemeToggle client:load />
      <a
        href={siteConfig.links.linkedin}
        target="_blank"
        rel="noopener noreferrer"
        class="hidden sm:inline-flex h-9 px-4 items-center justify-center rounded-md text-sm font-medium bg-primary text-primary-foreground hover:bg-primary/90 transition-colors flex-shrink-0"
      >
        Connect
      </a>
      <MobileMenu client:load items={items} />
    </div>
  </nav>
</header>
