---
import { siteConfig } from "@/lib/config";
import { Linkedin, Mail, MapPin, Github } from "lucide-react";
---

<footer class="border-t border-border bg-card">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div>
        <h3 class="font-bold text-lg mb-4 gradient-text">Abhishek Aggarwal</h3>
        <p class="text-muted-foreground text-sm mb-4">
          Building digital commerce platforms that actually convert. Based in Dubai, working across borders.
        </p>
      </div>
      
      <div>
        <h4 class="font-semibold mb-4">Contact</h4>
        <div class="space-y-3 text-sm text-muted-foreground">
          <a href={`mailto:${siteConfig.contact.email}`} class="flex items-center gap-2 hover:text-accent transition-colors">
            <Mail className="h-4 w-4 text-accent" />
            {siteConfig.contact.email}
          </a>
          <div class="flex items-center gap-2">
            <MapPin className="h-4 w-4 text-highlight" />
            {siteConfig.contact.location}
          </div>
        </div>
      </div>
      
      <div>
        <h4 class="font-semibold mb-4">Find Me On</h4>
        <div class="flex flex-wrap items-center gap-3">
          <a
            href={siteConfig.links.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-lg bg-card border border-border flex items-center justify-center hover:border-[#0A66C2] hover:bg-[#0A66C2]/10 transition-colors"
            aria-label="LinkedIn"
          >
            <Linkedin className="h-5 w-5 text-[#0A66C2]" />
          </a>
          <a
            href={siteConfig.links.github}
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-lg bg-card border border-border flex items-center justify-center hover:border-foreground hover:bg-foreground/10 transition-colors"
            aria-label="GitHub"
          >
            <Github className="h-5 w-5" />
          </a>
          
          <!-- Reddit with sketch callout -->
          <div class="reddit-callout flex items-center gap-2">
            <span class="sketch-text">Hear me ramble about the silly stuff that keeps me going.</span>
            <svg class="sketch-arrow" viewBox="0 0 80 40" fill="none">
              <!-- Curvy path with "wrong turns" -->
              <path 
                d="M5 20 
                   Q 15 10, 25 18 
                   Q 35 26, 45 14 
                   Q 55 4, 60 16
                   Q 65 24, 72 20" 
                stroke="currentColor" 
                stroke-width="2" 
                stroke-linecap="round"
                stroke-dasharray="4 3"
                class="arrow-path"
              />
              <!-- Arrow head -->
              <path 
                d="M68 14 L 76 20 L 68 26" 
                stroke="currentColor" 
                stroke-width="2" 
                stroke-linecap="round"
                stroke-linejoin="round"
                fill="none"
              />
            </svg>
            <a
              href={siteConfig.links.reddit}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 rounded-lg bg-card border border-border flex items-center justify-center hover:border-[#FF4500] hover:bg-[#FF4500]/10 transition-colors"
              aria-label="Reddit"
            >
              <svg class="h-5 w-5 text-[#FF4500]" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0zm5.01 4.744c.688 0 1.25.561 1.25 1.249a1.25 1.25 0 0 1-2.498.056l-2.597-.547-.8 3.747c1.824.07 3.48.632 4.674 1.488.308-.309.73-.491 1.207-.491.968 0 1.754.786 1.754 1.754 0 .716-.435 1.333-1.01 1.614a3.111 3.111 0 0 1 .042.52c0 2.694-3.13 4.87-7.004 4.87-3.874 0-7.003-2.176-7.003-4.87 0-.183.015-.366.043-.534A1.748 1.748 0 0 1 4.028 12c0-.968.786-1.754 1.754-1.754.463 0 .898.196 1.207.49 1.207-.883 2.878-1.43 4.744-1.487l.885-4.182a.342.342 0 0 1 .37-.249l2.972.612a1.252 1.252 0 0 1 1.042-.566zM8.5 11.983c-.968 0-1.754.786-1.754 1.754s.786 1.754 1.754 1.754 1.754-.786 1.754-1.754-.786-1.754-1.754-1.754zm7 0c-.968 0-1.754.786-1.754 1.754s.786 1.754 1.754 1.754 1.754-.786 1.754-1.754-.786-1.754-1.754-1.754zm-3.5 3.5a.5.5 0 1 0 0 1 .5.5 0 0 0 0-1z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
    
    <div class="mt-8 pt-8 border-t border-border text-center text-sm text-muted-foreground">
      <p>&copy; {new Date().getFullYear()} Abhishek Aggarwal. All rights reserved.</p>
    </div>
  </div>
</footer>

<style>
  .reddit-callout {
    display: flex;
    align-items: center;
    gap: 8px;
  }
  
  .sketch-text {
    font-family: 'Comic Sans MS', 'Chalkboard SE', 'Marker Felt', cursive;
    font-size: 11px;
    color: var(--color-muted-foreground);
    background: var(--color-card);
    padding: 6px 10px;
    border-radius: 12px;
    border: 2px dashed var(--color-border);
    white-space: nowrap;
    line-height: 1.3;
    box-shadow: 2px 2px 0 var(--color-border);
    transform: rotate(-1deg);
  }
  
  .sketch-arrow {
    width: 70px;
    height: 32px;
    color: var(--color-muted-foreground);
    transform: rotate(-2deg);
    flex-shrink: 0;
  }
  
  .arrow-path {
    animation: draw 2s ease-in-out infinite;
  }
  
  @keyframes draw {
    0%, 100% {
      stroke-dashoffset: 0;
    }
    50% {
      stroke-dashoffset: 12;
    }
  }
  
  @media (prefers-reduced-motion: reduce) {
    .arrow-path {
      animation: none;
    }
  }
  
  @media (max-width: 640px) {
    .reddit-callout {
      width: 100%;
      margin-top: 12px;
      justify-content: flex-start;
    }
    
    .sketch-text {
      white-space: normal;
      max-width: 130px;
    }
    
    .sketch-arrow {
      width: 55px;
      height: 28px;
    }
  }
</style>
