---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/layout/Header.astro";
import Footer from "@/components/layout/Footer.astro";
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { getCollection } from 'astro:content';

const caseStudies = await getCollection('case-studies');
---

<Layout 
  title="Case Studies" 
  description="Explore detailed case studies of enterprise eCommerce implementations and digital transformations."
>
  <Header />
  <main class="pt-16">
    <section class="py-20 px-4">
      <div class="container mx-auto">
        <div class="fade-in">
          <h1 class="text-4xl font-bold mb-4 text-center">Case Studies</h1>
        </div>
        <div class="fade-in stagger-1">
          <p class="text-muted-foreground text-center mb-12 max-w-2xl mx-auto">
            Detailed insights into enterprise implementations and digital transformations.
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
          {caseStudies.map((study, index) => (
            <div class={`scale-in stagger-${((index % 3) + 2)}`}>
              <a href={`/case-studies/${study.slug}`} class="block h-full">
                <Card className="h-full hover-lift hover-glow cursor-pointer">
                  <CardHeader>
                    <div class="flex items-start justify-between gap-2">
                      <CardTitle className="text-lg">{study.data.title}</CardTitle>
                      <Badge variant="secondary" className="shrink-0">{study.data.year}</Badge>
                    </div>
                    <CardDescription>{study.data.client}</CardDescription>
                  </CardHeader>
                  <CardContent className="flex-1">
                    <p class="text-sm text-muted-foreground mb-4">{study.data.description}</p>
                    
                    <Badge variant="outline" className="mb-4">{study.data.platform}</Badge>
                    
                    <ul class="space-y-1.5 mb-4">
                      {study.data.highlights.slice(0, 2).map((highlight) => (
                        <li class="text-xs text-muted-foreground flex items-start gap-2">
                          <span class="text-primary">â€¢</span>
                          <span>{highlight}</span>
                        </li>
                      ))}
                    </ul>
                    
                    {study.data.metrics && (
                      <div class="flex gap-4 mt-auto pt-4 border-t border-border">
                        {study.data.metrics.slice(0, 2).map((metric) => (
                          <div>
                            <div class="text-lg font-semibold">{metric.value}</div>
                            <div class="text-xs text-muted-foreground">{metric.label}</div>
                          </div>
                        ))}
                      </div>
                    )}
                  </CardContent>
                </Card>
              </a>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
